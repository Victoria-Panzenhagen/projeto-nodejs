<html>
    <body>
        <h1>Cadastro de Alunos</h1>

        <form action="/alunos" method="post">

            <div if(data.aluno.id)>
                <input type="hidden" name="_method" value="PUT">
                <input type="hidden" id="id" name="id" value="${data.aluno.id}"/>
            </div>

            <div>
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" value="${data.aluno.nome}"/>
            </div>
            <div>
                <label for="data_nasc">Data_Nascimento:</label>
                <input type="text" id="data_nasc" name="data_nasc" value="${data.aluno.data_nasc}" placeholder="DD-MM-AAAA"/>
            </div>
            <div>
                <label for="cpf">CPF:</label>
                <input type="text" id="cpf" name="cpf" value="${data.aluno.cpf}"/>
            </div>
            <div>
                <label for="nota">NOTA:</label>
                <input type="text" id="nota" name="nota" value="${data.aluno.nota}"/>
            </div>
            <input type="submit" value="Salvar" />
        </form>
    </body>
</html>