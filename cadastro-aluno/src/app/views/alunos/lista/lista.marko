<html>
    <head>
        <meta charset="utf-8">
    </head>
    <body>
        <h1> Listagem de Alunos </h1>
        <table id="alunos">
                <tr>
                    <td>ID</td>
                    <td>NOME</td>
                    <td>DATA_NASC</td>                    
                    <td>CPF</td>
                    <td>NOTA</td>
                    <td>ENDERECO</td>
                </tr>
                
                <tr id="aluno_${aluno.id}" for (aluno in data.alunos)>
                    <td>${aluno.id}</td>
                    <td>${aluno.nome}</td>
                    <td>${aluno.data_nasc}</td>
                    <td>${aluno.cpf}</td>
                    <td>${aluno.nota}</td>
                    <td><a href="/alunos/endereco">Editar</a></td>
                    <td><a href="/alunos/form/${aluno.id}">Editar</a></td> 
                    <td><a href="#" da-ref="${aluno.id}" data-type="remocao">Remover</a></td> 
                </tr>
        </table> 

        <script src="/estatico/js/remove-aluno.js">
        </script> 
    </body> 
</html>

            